@{
    ViewData["Title"] = "Welcome to Retra Hotel";
    Layout = "_Layout";
}


<!-- HomePage Content -->
<section class"hero-section bg-light-py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4">Welcome to Retra Hotel</h1>

                <p class="lead">Experiencee luxury and comfort like never before.</p>
                <a href="/Home/Book" class="btn btn-primary btn-lg">Book Now</a>
            </div>
            @section Scripts {
                <script>
                    console.log("HomePage Loaded!");
                </script>
            }

            <!-- Booking Section -->
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card" title="">Book Your Stay</h5>

                        <form>
                            <div class="mb-3">
                                <label for="checkInDate" class="form-label">Check-In Date</label>
                                <input type="date" class="form-control" id="checkInDate" required/>
                            </div>

                            <div class="mb-3">
                                <label for="checkOutDate" class="form-label">Check-Out Date</label>
                                <input type="date" class="form-control" id="checkOutDate" required />
                            </div>

                            <div class="mb-3">
                                <label for="roomType" class="form-label">Room Type</label>
                                <select class="form-select" id="roomType" required>
                                    <option value="deluxe">Deluxe</option>
                                    <option value="suite">Suite</option>
                                    <option value="standart">Standard</option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Check Availability</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <h2 class="text-center mb-5">Why Choose Retra Hotel?</h2>

        <div class="row">
            <div class="col-md-4 text-center">
                <div class="features-icon mb-3">
                    <i class="fas fa-wifi fa-3x"></i>
                </div>

                <h4>Free Wi-Fi</h4>
                <p>Stay connected with high-speed internet access.</p>
            </div>

            <div class="col-md-4 text-center">
                <div class="feature-icon mb-3">
                    <i class="fas fa-utensils fa-3x"></i>
                </div>

                <h4>Restaurant</h4>
                <p>Enjoy delicious meals at our in-house restaurant.</p>
            </div>

            <div class="col-md-4 text-center">
                <div class="feature-icon mb-3">
                    <i class="fas fa-swimming-pool fa-3x"></i>
                </div>

                <h4>Swimming Pool</h4>
                <p>Relax and unwind by our luxurious pool.</p>
            </div>
        </div>
    </div>
</section>


