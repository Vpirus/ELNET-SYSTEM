@{
    ViewData["Title"] = "Services";
    Layout = "_Layout";
}

<!-- Services Page Content -->
<div class="container my-5">
    <h2 class="text-center mb-4">Our Services</h2>
    <p class="text-center lead">Discover the exceptional services we offer to make your stay unforgettable.</p>

    <!-- Service Cards -->
    <div class="row">
        <!-- Spa Services -->
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="/images/spa-service.jpg" class="card-img-top" alt="Spa Services">
                <div class="card-body">
                    <h5 class="card-title">Spa & Wellness</h5>
                    <p class="card-text">Relax and rejuvenate with our luxurious spa treatments and wellness programs.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-spa me-2"></i>Massage Therapy</li>
                        <li><i class="fas fa-hot-tub me-2"></i>Hot Tub Sessions</li>
                        <li><i class="fas fa-leaf me-2"></i>Aromatherapy</li>
                    </ul>
                    <a href="/Home/BookService" class="btn btn-primary w-100">Book Now</a>
                </div>
            </div>
        </div>

        <!-- Airport Transfers -->
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="/images/airport-transfer.jpg" class="card-img-top" alt="Airport Transfers">
                <div class="card-body">
                    <h5 class="card-title">Airport Transfers</h5>
                    <p class="card-text">Enjoy hassle-free travel with our reliable airport transfer services.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-car me-2"></i>Private Transfers</li>
                        <li><i class="fas fa-clock me-2"></i>24/7 Availability</li>
                        <li><i class="fas fa-luggage-cart me-2"></i>Luggage Assistance</li>
                    </ul>
                    <a href="/Home/BookService" class="btn btn-primary w-100">Book Now</a>
                </div>
            </div>
        </div>

        <!-- Room Service -->
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="/images/room-service.jpg" class="card-img-top" alt="Room Service">
                <div class="card-body">
                    <h5 class="card-title">Room Service</h5>
                    <p class="card-text">Savor delicious meals and beverages delivered right to your room.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-utensils me-2"></i>24/7 Dining</li>
                        <li><i class="fas fa-coffee me-2"></i>Complimentary Breakfast</li>
                        <li><i class="fas fa-concierge-bell me-2"></i>On-Demand Service</li>
                    </ul>
                    <a href="/Home/BookService" class="btn btn-primary w-100">Book Now</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Services -->
    <div class="row mt-5">
        <div class="col-md-12">
            <h3 class="text-center mb-4">More Services</h3>
            <div class="row">
                <!-- Concierge Services -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-concierge-bell me-2"></i>Concierge Services</h5>
                            <p class="card-text">Our concierge team is here to assist you with travel arrangements, event bookings, and more.</p>
                        </div>
                    </div>
                </div>

                <!-- Fitness Center -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-dumbbell me-2"></i>Fitness Center</h5>
                            <p class="card-text">Stay active during your stay with our state-of-the-art fitness facilities.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>