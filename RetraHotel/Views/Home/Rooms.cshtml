@{
    ViewData["Title"] = "Rooms";
    Layout = "_Layout";
}

<!-- Rooms Page Content -->
<div class="container my-5">
    <h2 class="text-center mb-4">Our Rooms</h2>
    <p class="text-center lead">Explore our luxurious room options tailored for your comfort.</p>

    <!-- Room Listings -->
    <div class="row">
        <!-- Deluxe Room -->
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="/images/deluxe-room.jpg" class="card-img-top" alt="Deluxe Room">
                <div class="card-body">
                    <h5 class="card-title">Deluxe Room</h5>
                    <p class="card-text">Experience luxury with our spacious deluxe rooms, perfect for a relaxing stay.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-bed me-2"></i>1 King Bed</li>
                        <li><i class="fas fa-wifi me-2"></i>Free Wi-Fi</li>
                        <li><i class="fas fa-tv me-2"></i>Smart TV</li>
                    </ul>
                    <a href="/Home/Book" class="btn btn-primary w-100">Book Now</a>
                </div>
            </div>
        </div>

        <!-- Suite Room -->
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="/images/suite-room.jpg" class="card-img-top" alt="Suite Room">
                <div class="card-body">
                    <h5 class="card-title">Suite Room</h5>
                    <p class="card-text">Indulge in our premium suites with separate living and sleeping areas.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-bed me-2"></i>1 King Bed + Sofa Bed</li>
                        <li><i class="fas fa-wifi me-2"></i>Free Wi-Fi</li>
                        <li><i class="fas fa-coffee me-2"></i>Complimentary Breakfast</li>
                    </ul>
                    <a href="/Home/Book" class="btn btn-primary w-100">Book Now</a>
                </div>
            </div>
        </div>

        <!-- Standard Room -->
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="/images/standard-room.jpg" class="card-img-top" alt="Standard Room">
                <div class="card-body">
                    <h5 class="card-title">Standard Room</h5>
                    <p class="card-text">Enjoy a comfortable stay in our well-appointed standard rooms.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-bed me-2"></i>1 Queen Bed</li>
                        <li><i class="fas fa-wifi me-2"></i>Free Wi-Fi</li>
                        <li><i class="fas fa-shower me-2"></i>Private Bathroom</li>
                    </ul>
                    <a href="/Home/Book" class="btn btn-primary w-100">Book Now</a>
                </div>
            </div>
        </div>
    </div>
</div>